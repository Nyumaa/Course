@model Course_Project.Models.ViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create a new post";
}
<div>
    <form method="post" asp-controller="Panel" asp-action="Edit" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Title</label>
            <input asp-for="Title" />
        </div>
        <div>
            <label>Tags</label>
            <input asp-for="Tags" />
        </div>
        <div>
            <label>Category</label>
            <select asp-for="Category">
                @{
                    foreach (var category in Model.Category.Split(','))
                    {
                        <option value="@category">@category</option>
                    }
                }
            </select>
        </div>
        <div>
            <label>Body</label>
            <textarea asp-for="Description" id="editor"> </textarea>
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>